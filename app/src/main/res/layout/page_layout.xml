<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGray">

    <TextView
        android:id="@+id/page_place_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/page_text_margin_top" />

    <ImageView
        android:id="@+id/page_image_view"
        android:layout_width="@dimen/page_image_width"
        android:layout_height="@dimen/page_image_height"
        android:layout_below="@id/page_place_name_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/page_image_margin_top" />


</RelativeLayout>