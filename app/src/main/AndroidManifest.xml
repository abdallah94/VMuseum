<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exalt.vmuseum">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".VMuseum"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.DisplayActivity"></activity>

        <service android:name=".services.AudioService"></service>

        <receiver android:name=".services.AudioService$CancelNotoficationListener" />
        <receiver android:name=".services.AudioService$PauseButtonListener" />
        <receiver android:name=".services.AudioService$PlayButtonListener" />
    </application>

</manifest>